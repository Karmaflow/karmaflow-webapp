extends layout

block content
	.container
		h1.header.center.light-teal.lighten-2-text Escribe tu pregunta
		.row.center
		div
			form.col.s12(ng-submit = 'qC.submitQuestion()' )
				.row
					.input-field.col.s12
						i.material-icons.prefix question_answer
						input#title(type='text',placeholder = 'Pregunta',ng-model='qC.question.title')
						label(for='title') Título
				.row
					.input-field.col.s12
						i.material-icons.prefix question_answer
						textarea#description.materialize-textarea(ng-model='qC.question.post')
						label(for='description') Descripción
				.row.center
					h5 Selecciona una tag :)
					.input-field.col.s6.center
						select.browser-default(ng-model='qC.question.tag', ng-options='item.tag for item in qC.tags')
				.row.center
					br
					br
					button.btn.waves.teal.lighten-1(type='submit' name='go') Preguntar
						i.material-icons.left send
